<section class="section is-medium has-text-centered centering-item dashboard">        
    <h1
        class="title is-2"
    >
        Tableau de bord
    </h1>
    <div
        class="container has-text-centered centering-item"
    >
        <h1
            class="title is-4"
        >
            Ecrire un article :
        </h1>

        <div class="container">
            <div class="control">
                <a
                    class="button is-link"
                    href="{{route('get.article', {id: 'new'})}}"
                >
                    Nouvel article
                </a>
            </div>
        </div>
    </div>

    <div
        class="container has-text-centered centering-item"
    >
        <h1
            class="title is-4"
        >
            Se deconnecter :
        </h1>

        <div class="container">
            <div class="control">
                <button
                    class="button is-dark"
                    x-on:click="logout()"
                >
                    Deconnexion
                </button>
            </div>
        </div>
    </div>
</section>